<div class="staybuzzin">
  <h1>{{post.user.username}}'s Post</h1>
</div>

{{> post-info post}}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-secondary">Add Comment</button>
    <button type="button" class="btn btn-outline-success">Upvote</button>
    <button type="button" class="btn btn-outline-danger">Downwote</button>
  </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}